<Window x:Name="mainWindow" x:Class="WpfTeslaCamViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="WpfTeslaCamViewer" Height="720" Width="1280" Loaded="Window_Loaded">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.01*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.01*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <wpf:VideoView x:Name="videoViewLeftRepeater" Grid.Row="0" Grid.Column="0"/>
        <wpf:VideoView x:Name="videoViewFront" Grid.Row="0" Grid.Column="2"/>
        <wpf:VideoView x:Name="videoViewRightRepeater" Grid.Row="0" Grid.Column="4"/>
        <wpf:VideoView x:Name="videoViewRear" Grid.Row="1" Grid.Column="2"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button x:Name="btn_OpenFolder" Content="Open TeslaCam Folder" Click="btn_OpenFolder_Click" />
            <Label x:Name="lbl_DebugInfo" />
            <Label Content="Playback speed:"/>
            <StackPanel FlowDirection="LeftToRight">
                <Button x:Name="btn_SlowDown" Content="-" DockPanel.Dock="Left" Click="btn_SlowDown_Click" />
                <Label x:Name="lbl_playbackspeed" Content="1" HorizontalAlignment="Center" />
                <Button x:Name="btn_SpeedUp" Content="+" DockPanel.Dock="Right" Click="btn_SpeedUp_Click"/>
            </StackPanel>
            <Slider x:Name="slider_progress" PreviewMouseDown="slider_progress_PreviewMouseDown" PreviewMouseUp="slider_progress_PreviewMouseUp" Maximum="1" SmallChange="0.01" TickFrequency="0.1" />
        </StackPanel>
    </Grid>
</Window>
